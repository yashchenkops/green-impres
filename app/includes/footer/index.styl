.footer
  padding 50px 0

  &__logo
    display flex
    align-items center
    justify-content center
    gap 30px
    margin-bottom 50px

  &__menu
    margin-bottom 50px
  
    &-list
      display flex
      align-items center
      justify-content center
      gap 20px
    
    &-link
      font-weight 700
      font-size 20px
      color #555

      &:hover
        text-decoration underline

  &__info
    font-weight 500
    font-size 16px
    text-align center
    color #555