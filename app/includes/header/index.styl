//desktop starts
.header__desktop
  position absolute
  left 0
  right 0
  width 100%
  padding 39px 15px
  z-index 100
  display flex
  align-items center
  justify-content space-between
  max-width 1540px
  margin 0 auto
  column-gap 30px

  .header__logo
    max-width 381px

    img
      width 100%
      pointer-events none
      user-select none

  .header__menu
    &-list
      display flex
      align-items center
      gap 35px

    &-link
      color #555
      font-size 22px
      font-weight 500

      &:hover
        text-decoration underline
//desktop end
  
//mobile starts
.header__mobile
  position absolute
  width 100%
  padding 39px 15px
  z-index 100
  display none

  &-button
    border-radius 50%
    padding 16px
    width 51px
    height 51px
    background-color #96D29D

  .header__actions
    position relative
    display flex
    align-items center
    gap 20px
    z-index 20

  .header__logo
    max-width 254px

    img
      max-width 100%

  .header__menu
    display flex
    flex-direction column
    position absolute
    left -100%
    top 0
    bottom 0
    right 0
    width 100%
    height 100vh
    background-color #EEEEEE
    transition left .5s

    &.is-active
      left 0

      .header__menu-item
        opacity 1
        transform translateX(0)

        &:nth-child(1)
          transition-delay 0.3s

        &:nth-child(2)
          transition-delay 0.4s

        &:nth-child(3)
          transition-delay 0.5s

        &:nth-child(4)
          transition-delay 0.6s

        &:nth-child(5)
          transition-delay 0.7s

  .header__menu-list
    margin auto
    text-align center
    padding-top 120px

  .header__menu-item
    opacity 0
    transform translateX(-20px)
    transition opacity 0.5s, transform 0.5s

    &:not(:last-child)
      margin-bottom 40px

  .header__menu-link
    font-weight 500
    font-size 22px
    color #555

//mobile ends

//media
@media (max-width 1248px)
  .header
    &__desktop
      display none

    &__mobile
      display block
